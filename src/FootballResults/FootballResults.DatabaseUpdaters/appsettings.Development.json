{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Microsoft.Hosting.Lifetime": "Error",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },

  "FootballApiConfig": {
    "DataFetch": {
      "ShouldBackupData": true,
      // if set to true, the data will be backed up to the specified path.
      // if LoadDataFromBackup is set to true, the data will be loaded from the files instead of making an API request.

      "Countries": {
        "LoadDataFromBackup": true
      },
      "Leagues": {
        "LoadDataFromBackup": true
      },
      "TeamsForLeagueAndSeason": {
        "LoadDataFromBackup": true
      },
      "SquadForTeam": {
        "LoadDataFromBackup": true
      },
      "MatchesForLeagueAndSeason": {
        "LoadDataFromBackup": true
      },
      "MatchesForDate": {
        "LoadDataFromBackup": true
      },
      "StandingsForLeagueAndSeason": {
        "LoadDataFromBackup": true
      },
      "TopScorersForLeagueAndSeason": {
        "LoadDataFromBackup": true
      }
    }
  }
}
