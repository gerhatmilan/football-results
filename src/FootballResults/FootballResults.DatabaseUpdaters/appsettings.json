{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },

  "FootballApiConfig": {
    "BaseAddressHeaderKey": "x-rapidapi-host",
    "BaseAddress": "https://v3.football.api-sports.io",
    "ApiKeyHeaderKey": "x-rapidapi-key",
    "ApiKey": "ApiKey",
    "RateLimit": 10,
    "DataFetch": {
      "ShouldBackupData": false,
      // if set to true, the data will be backed up to the specified path.
      // if LoadDataFromBackup is set to true, the data will be loaded from the files instead of making an API request.

      "Countries": {
        "Endpoint": "/countries",
        "BackupPath": "./databackup/countries/countries.json",
        "LoadDataFromBackup": false
      },
      "Leagues": { // includes seasons
        "Endpoint": "/leagues",
        "BackupPath": "./databackup/leagues/leagues.json",
        "LoadDataFromBackup": false
      },
      "TeamsForLeagueAndSeason": { // includes venues
        "Endpoint": "/teams?league={0}&season={1}", // {0} = leagueID, {1} = year
        "BackupPath": "./databackup/teams/{0}/{1}.json", // {0} = year, {1} = leagueID
        "LoadDataFromBackup": false
      },
      "SquadForTeam": {
        "Endpoint": "/players/squads?team={0}", // {0} = teamID
        "BackupPath": "./databackup/squads/{0}.json", // {0} = teamID
        "LoadDataFromBackup": false
      },
      "MatchesForLeagueAndSeason": {
        "Endpoint": "/fixtures?league={0}&season={1}", // {0} = leagueID, {1} = year
        "BackupPath": "./databackup/matches/{0}/{1}.json", // {0} = year, {1} = leagueID
        "LoadDataFromBackup": false
      },
      "MatchesForDate": {
        "Endpoint": "/fixtures?date={0}", // {0} = date
        "BackupPath": "./databackup/matches/date/{0}.json",
        "LoadDataFromBackup": false
      },
      "StandingsForLeagueAndSeason": {
        "Endpoint": "/standings?league={0}&season={1}", // {0} = leagueID, {1} = year
        "BackupPath": "./databackup/standings/{0}/{1}.json", // {0} = year, {1} = leagueID
        "LoadDataFromBackup": false
      },
      "TopScorersForLeagueAndSeason": {
        "Endpoint": "/players/topscorers?league={0}&season={1}", // {0} = leagueID, {1} = year
        "BackupPath": "./databackup/topscorers/{0}/{1}.json", // {0} = year, {1} = leagueID
        "LoadDataFromBackup": false
      }
    },

    "IncludedLeagues": [
      {
        "ID": 2,
        "Name": "UEFA Champions League"
      },
      {
        "ID": 4,
        "Name": "Euro Championship"
      },
      {
        "ID": 39,
        "Name": "Premier League"
      },
      {
        "ID": 61,
        "Name": "Ligue 1"
      },
      {
        "ID": 78,
        "Name": "Bundesliga"
      },
      {
        "ID": 135,
        "Name": "Serie A"
      },
      {
        "ID": 140,
        "Name": "La Liga"
      }
    ]
  }
}
