@inherits LeagueCardBase

@if (League != null)
{
    <div class="leagueCard">
        <div class="leagueHeader">
            <a class="leagueDetails"href="/leagues/@String.Join("-", League.Name.ToLower().Split(" "))">
                <div class="leagueLogoDiv">
                    <img class="leagueLogo" src="@League.LogoLink" alt="@League.Name logo" />
                </div>
                <div class="leagueName">
                    @League.Name
                </div>
            </a>
            <div class="favoriteButtonDiv">
                    <svg style="color: @(isFavorite ? FAVORITE_BUTTON_COLOR : DEFAULT_BUTTON_COLOR)" type="button" class="favoriteButton bi bi-bookmark-fill"
                         @onclick="(() => FavoriteButtonClicked(League.LeagueID))" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M2 2v13.5a.5.5 0 0 0 .74.439L8 13.069l5.26 2.87A.5.5 0 0 0 14 15.5V2a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2" />
                    </svg>
            </div>
        </div>
        @if (Matches != null)
        {
            @foreach (Match match in Matches)
            {
                <MatchCard Match="match" />
            }
        }
    </div>
}