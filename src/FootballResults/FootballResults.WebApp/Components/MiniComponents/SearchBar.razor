<div class="searchDiv">
    <input type="search" class="form-control" id="searchBar" placeholder="Search..." @onchange="Search">
</div>


@code {
    [Inject]
    protected NavigationManager? NavigationManager { get; set; }

    protected string? SearchValue { get; set; }

    protected void Search(ChangeEventArgs e)
    {
        if (e.Value != null && e.Value.ToString() != "")
        {
            NavigationManager!.NavigateTo($"/search?value={e.Value.ToString()}");
        }
    }
}
